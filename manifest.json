{
  "manifest_version": 3,
  "name": "WebPen",
  "version": "1.0",
  "description": "他のユーザーとリアルタイムでラクガキを",
  "icons": {
    "16": "images/webpen-16.png",
    "32": "images/webpen-32.png",
    "48": "images/webpen-48.png",
    "128": "images/webpen-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "websocket.js",
        "canvas.js",
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "webpen.html",
        "webpen-whiteboard.html",
        "images/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_title": "WebPen"
  }
}