{
  "manifest_version": 3,
  "name": "共有お絵描き",
  "version": "1.0",
  "description": "Webページ上で共有お絵描きができる拡張機能",
  
  "permissions": [
    "storage",
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["control-bar.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "action": {
    "default_popup":"popup.html",
    "default_title": "共有お絵描き"
  }
}