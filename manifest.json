{
  "manifest_version": 3,
  "name": "共有お絵描き",
  "version": "1.0",
  "description": "8桁コードで他のユーザーとリアルタイムお絵描き共有",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["websocket.js", "canvas.js", "content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["control-bar.html","images/pencil-cursor.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "共有お絵描き"
  }
}